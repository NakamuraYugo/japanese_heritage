<%= form_with model: spot, url: confirm_spots_path, local: true do |f|  %>
  <%= render 'shared/error_messages', resource: f.object %>

  <%= f.label :name, "スポットネーム", class: "spot_badge" %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :description, "スポット詳細", class: "spot_badge" %>
  <%= f.text_area :description, class: "form-control" %>

  <%= f.label :spot_images, "スポット画像", class: "spot_badge" %>
  <%= f.file_field :spot_images, multiple: true, name: "spot[spot_images][]", onchange: 'previewImages(event)', class: "form-control" %>
  <%= f.hidden_field :spot_images_cache %>

  <div id="images-preview" class="mt-3 mb-3"></div>

  <%= f.submit "確認画面へ", class: "btn btn-primary" %>
<% end %>
